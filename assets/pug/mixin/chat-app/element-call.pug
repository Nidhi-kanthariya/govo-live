mixin call-data(type,data)
    ul.flex.flex-col.gap-4 
        each dataItem in data 
            li.flex.items-start.justify-between(class="pt-[13px] border-t border-gray-light first:pt-0 first:mt-0 first:border-none")
                div.flex.items-center.gap-3(class="w-[calc(100%_-_59px)] xl:gap-2")
                    div.avatar 
                        div.w-10.rounded-full(class="xl:w-9")
                            img(src=`../../assets/images/avatar/${dataItem.image}`, alt=`${dataItem.title}`)
                    div(class="w-[calc(100%_-_70px)]") 
                        h4.text-xs.font-medium.truncate.text-title(class="leading-none lg:text-2xs lg:leading-none")=dataItem.title 
                        span.text-content.truncate.block.mt-1.flex.gap-2
                            if(dataItem.voicecall)
                                +SVG_ICON("Calling","w-4 h-4 stroke-primary")
                                span.text-content(class="text-xs")=dataItem.calltype

                            else
                                +SVG_ICON("Video","w-4 h-4 stroke-secondary")
                                span.text-content(class="text-xs")=dataItem.calltype
                div.flex.flex-col.items-end.gap-1      
                    span.text-content(class="text-3xs")=dataItem.calltime