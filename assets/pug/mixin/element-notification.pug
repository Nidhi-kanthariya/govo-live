mixin notification(data)
   ul
      each dataItem,index in data 
         li.flex.items-center.group(class="justify-between gap-3 first:pt-0 last:pb-0 first:border-none py-[16px] xl:py-[12px] border-t border-border-light")  
            div.flex.items-center(class="gap-[10px] flex-[1_1_0]")
               img(class="rounded-full  w-[45px] h-[45px] 3xl:w-[40px] 3xl:h-[40px]" src=`../../assets/images/avatar/${dataItem.image}` alt="avatar" )  
               div  
                  h4.transition-all(class="text-xs font-semibold text-title line-clamp-2 group-hover:text-primary")= dataItem.title 
                  div.items-center.gap-2(class="absolute invisible transition-all duration-300 bg-white opacity-0 group-hover:opacity-100 group-hover:visible")
                     button(class="btn btn-md py-[6px] px-[27px] lg:px-[15px] text-4xs text-white bg-secondary") 
                        | Accpet
                     button(class="btn btn-md  py-[6px] px-[27px] lg:px-[15px] text-4xs text-white bg-primary") 
                        | Decline
                  span(class="text-2xs font-semibold text-content line-clamp-1 mt-[5px]")= dataItem.subTitle
            a(href="javascript:void(0)")
               span(class="min-w-fit badge sm:text-3xs bg-gray-light text-title py-[7px] px-[13px] lg:py-[5px] lg:px-[10px]")= dataItem.badge
