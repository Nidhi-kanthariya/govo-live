mixin new-product-card(data) 
  ul  
    each dataItem, index in data
      li.group.flex.items-center.group(class="gap-[calc(7px_+_(15_-_7)_*_((100vw_-_320px)_/_(1920_-_320)))] first:pt-0 last:pb-0 first:border-none py-[13px] border-t border-light dark:border-border-dark dark:border-t")  
        div.rounded-5.overflow-hidden(class="min-w-14 min-h-auto 6xl:w-12 lg:min-w-[2.5rem]")
          img.object-cover(src=`../../assets/images/${dataItem.image}` alt="event" class="w-10 h-10 rounded-full") 
        div(class=`${dataItem.responsiveOption && sideType ? "w-[calc(100%_-_130px)]": ""} ${!sideType ? "max-w-[185px] 4xl:max-w-[250px] 2xl:max-w-[180px] lg:max-w-full 3sm:max-w-[180px]" : "w-[calc(100%_-_170px)] sm:w-[calc(100%_-_150px)]"}`)  
          if(link == "link")
            a(href="product.html") 
              h4.text-xs.font-bold.truncate.transition-all(class="group-hover:text-primary dark:text-white")= dataItem.title 
          if(link !== "link")
            h4.text-xs.font-bold.truncate.transition-all(class="group-hover:text-primary dark:text-white")= dataItem.title 
          span.text-3xs.font-normal.text-content3.block.truncate(class=" mt-[4px] w-calc(55px_+_(140_-_55)_*_((100vw_-_320px)_/_(1920_-_320)))")= dataItem.subTitle
        div.flex.flex-col.gap-1.items-center.ml-auto 
          span(class='dark:text-white').text-xs.font-bold.text-title.whitespace-nowrap= dataItem.sideTitle
          span(class="dark:text-content3").text-3xs.font-normal.text-content3.whitespace-nowrap= dataItem.sideSubTitle 