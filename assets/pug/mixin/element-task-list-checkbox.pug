//- =========================
//-  Task List With Check Box 
//- ==========================
mixin task-list-checkbox(data)
   ul 
      each dataItem,index in data
         li.flex.items-center.gap-2(class="py-[15px] 4xl:py-[14px] lg:py-[10px] first:pt-0 last:pb-0") 
            label.checkbox(class="min-w-[18px] min-h-[18px] rounded-[4px]")
               input(type='checkbox' checked=index + 1 == 3 ? true : false)
               div.checkbox-indicator
                  i(data-feather="check")
            div
               h5(class="text-xs font-semibold text-title line-clamp-1")= dataItem.title
               div.flex.items-center.gap-2 
                  span(class="text-2xs font-semibold text-content line-clamp-1")=dataItem.subTitle
                  if(dataItem.badge)
                     span.badge(class="font-bold py-[2px] px-[10px] bg-primary-light text-4xs text-primary")= dataItem.badge