table.table 
   thead 
      tr 
         each userHead,index in MONTHLY_PROGRESS.header
            th=  userHead

   tbody
      each bodyData,index in MONTHLY_PROGRESS.body
         tr
            td(class="min-w-[170px]") 
               div(class="flex items-center gap-2")
                  div.flex.items-center(class="gap-[9px]")
                     img(class="W-10 h-10 4xl:w-[38px] 4xl:h-[38px] 3xl:w-[36px] 3xl:h-[36px] 2sm:w-9 2sm:h-9 rounded-full" src=`../../assets/images/avatar/${bodyData.image}`, alt=`${bodyData.title}`) 
                     div
                        h4(class="text-xs font-semibold text-title")=bodyData.title
                        span(class="block text-2xs 2sm:mt-0 font-semibold 4xl:mt-0 text-content mt-1")=bodyData.subTitle  

            td(class="min-w-[160px]")= bodyData.email
            td(class="min-w-[135px]")= bodyData.phoneNo
            td(class="min-w-[140px]")= bodyData.compName
            td(class="min-w-[100px] text-center") 
               span(class="bg-gray-light text-xs p-[6px] block w-full")= bodyData.status
