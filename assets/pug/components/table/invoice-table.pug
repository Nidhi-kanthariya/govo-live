//- invoice table
//- =======================
table.table(class="equal-space table-action invoice")
    thead 
        tr
            each head,index in INVOICE_TABLE.header
                if(index===0)
                    th
                        div(class="flex items-center gap-2")
                            label.checkbox.cursor-pointer.block(class="w-4 h-4")
                                input(type='checkbox' class="peer") 
                                div.checkbox-indicator(class="peer-checked:!bg-primary !border-primary")  
                                    i(data-feather="check")
                            =  head
                else 
                    th=  head

    tbody 
        each bodyData, index in INVOICE_TABLE.body
            tr(class="hover:bg-gray-light invoice-item")
                td(class="min-w-[210px]") 
                    div(class="flex items-center gap-2")
                        label.checkbox.cursor-pointer.block(class="w-4 h-4") 
                            input(type='checkbox' class="peer") 
                            div.checkbox-indicator(class="peer-checked:!bg-primary !border-primary")  
                                i(data-feather="check")
                        div.flex.items-center(class="gap-[.5625rem]") 
                            img(class="w-10 h-10 rounded-full" src=`../../assets/images/product/${bodyData.image}`, alt=`${bodyData.title}`) 
                            div
                                a(href="invoice-preview.html")
                                    h4(class="text-xs font-semibold text-title")=bodyData.title
                                span(class="block mt-1 font-semibold text-2xs text-content")=bodyData.subTitle 
                td(class="min-w-[7.5rem]")  
                    h4(class="text-xs font-semibold text-title")= bodyData.userName
                td(class="min-w-[7.5rem]") 
                    h4(class="text-xs font-semibold text-content")= bodyData.date
                td(class="min-w-[5.5rem]")
                    h4(class=`text-xs font-semibold capitalize text-${bodyData.statusCode}`)= bodyData.status
                td(class="min-w-[6.25rem]")
                    h4(class="text-xs font-semibold text-title")=bodyData.total
                td(class="min-w-[3.125rem] text-right")
                    div.flex.items-center.gap-3(class="block 2lg:hidden") 
                        a(href="invoice-create.html")
                            +SVG_ICON("Edit-Square","w-[1.125rem] h-[1.125rem] stroke-title hover:stroke-primary")
                        button
                            +SVG_ICON("Delete","w-[1.125rem] h-[1.125rem] remove-invoice stroke-title hover:stroke-primary")
                        a(href="../../assets/chat-doc/invoice.pdf" Download)
                            +SVG_ICON("Arrow-Down","w-[1.125rem] h-[1.125rem] stroke-title hover:stroke-primary")
                    div.dropdown.dropdown-bottom.on-hover-show(class=`inline-flex justify-end hidden 2lg:block ${USER_INFORMATION.body.length === index + 1 ? "top-open" : ""}`)
                        button 
                            +SVG_ICON("Dote-v","w-[1.125rem] h-[1.125rem] stroke-title") 
                        div.dropdown-menu(class=`!right-0 !left-unset`)
                            ul
                                li
                                    a(href="invoice-create.html")
                                        +SVG_ICON("Edit-Square","hover:stroke-primary w-[1.125rem] h-[1.125rem] stroke-title")   
                                li
                                    a(href="javascript:void(0)")
                                        +SVG_ICON("Delete","hover:stroke-primary w-[1.125rem] remove-invoice h-[1.125rem] stroke-title") 
                                li
                                    a(href="../../assets/chat-doc/invoice.pdf" Download)
                                        +SVG_ICON("Arrow-Down","hover:stroke-primary w-[1.125rem] h-[1.125rem] stroke-title") 
