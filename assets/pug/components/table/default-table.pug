table.table.equal-space
    thead 
        tr 
            each head in DEFAULT_TABLE.header
                th=  head
    tbody
        each bodyData,index in DEFAULT_TABLE.body
            tr
                td(class="min-w-[1.25rem]")=index+1
                td(class="min-w-[11.125rem]")=bodyData.firstName
                td(class="min-w-[11.125rem]")=bodyData.lastName
                td(class="min-w-[11.125rem]")=bodyData.userId
                td(class="min-w-[.625rem]")=bodyData.favoriteColor  