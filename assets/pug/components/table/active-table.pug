//- Active table
//- ====================


table.table.equal-space
    thead 
        tr
            each userHead,index in ACTIVE_TABLE.header
                if(index===0)
                    th
                        div(class="flex items-center gap-2")
                            label.checkbox(class="w-[15px] h-[15px]")
                                input(type='checkbox peer')
                                div.checkbox-indicator(class="bg-white peer-checked:bg-primary")
                                    i(data-feather="check")
                            =  userHead
                else 
                    th=  userHead
    tbody
        each bodyData,index in ACTIVE_TABLE.body
            tr(class="hover:bg-gray-light")
                td(class="min-w-[20px]")
                    div(class="flex items-center gap-2")
                        label.checkbox(class="w-[15px] h-[15px]")
                            input(type='checkbox' class="peer"  checked=index + 1 == 2 ? true : false)
                            div.checkbox-indicator(class="bg-white peer-checked:bg-primary border-content peer-checked:border-primary")
                                i(data-feather="check")
                td(class="min-w-[50px]")
                    h4(class="text-xs font-semibold text-title")= bodyData.userName
                td(class="min-w-[50px]") 
                    h4(class=`text-xs font-semibold text-${bodyData.status}`)= bodyData.statusContent
                td(class="min-w-[50px]")
                    h4(class="text-xs font-semibold text-title")= bodyData.role
                td(class="min-w-[10px]")
                    h4(class=`text-xs font-semibold text-${bodyData.Salary}`)= bodyData.salaryContent
                td(class="min-w-[20px]")
                    h4(class="text-xs font-semibold text-title")= bodyData.startDate          