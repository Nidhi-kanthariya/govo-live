table.table.equal-space
   thead 
      tr 
         each head in OPEN_INVOICE.header
            th=  head
   tbody
      each bodyData in OPEN_INVOICE.body
         tr(class="group")
            td(class="min-w-[11.125rem]") 
               a.flex.items-center(href="./invoice.html" class="gap-[.5625rem]")
                  img(class="2sm:w-[2.375rem] 2sm:h-[2.375rem] w-10 h-10 rounded-full" src=`../../assets/images/avatar/${bodyData.image}`, alt=`${bodyData.name}`) 
                  div
                     h4(class="text-xs font-semibold text-title group-hover:text-primary")=bodyData.name
            td(class="min-w-[7.5rem]") 
               h4(class="text-xs font-semibold text-content group-hover:text-primary")= bodyData.date  
            td(class="min-w-[6.25rem]") 
               h4(class="text-xs font-semibold text-title group-hover:text-primary")=bodyData.amount
            td(class="min-w-[5.3125rem]") 
               h4(class=`text-xs font-semibold capitalize text-${bodyData.statusCode}`)= bodyData.status
            td(class="min-w-[6.25rem] max-w-[6.25rem]") 
               div.custom-select.select-style-1
                  select
                     each actionItem,index in OPEN_INVOICE.action
                        option( value="")= actionItem
