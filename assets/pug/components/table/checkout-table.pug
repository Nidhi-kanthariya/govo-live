table.table.equal-space
  thead
    tr  
      each head in CHECKOUT_TABLE.header
        th= head 
  tbody
    each bodyData in CHECKOUT_TABLE.body
      tr 
        td 
          img(class="min-w-[4rem] w-16 h-14 rounded-5" src=`../../assets/images/ecommerce/${bodyData.product}` alt=`${bodyData.product}`) 
        td(class="min-w-[560px] 2lg:min-w-[450px]")
          div  
            h4(class="text-xs font-semibold text-title dark:text-white")=bodyData.productDetail
            span(class="block mt-1 font-semibold text-2xs text-content dark:text-white")=bodyData.subDetail 
        td(class="min-w-[.625rem] dark:text-white")=bodyData.price
    tr  
      td(class="text-xs font-bold dark:text-white" colspan="2") Sub Total :
      td(class="text-xs font-bold dark:text-white text-end") $851.00 
    tr  
      td(class="text-xs dark:text-white" colspan="2") Discount : 
      td(class="text-xs text-content3 text-end") -$50.00
    tr  
      td(class="text-xs dark:text-white" colspan="2") Shipping Charge :
      td(class="text-xs text-content3 text-end") $25.99  
    tr  
      td(class="text-xs dark:text-white" colspan="2") Tax :
      td(class="text-xs text-content3 text-end") $12.59  
    tr  
      td(class="text-xs font-bold dark:text-white" colspan="2") Total (USD) :
      td(class="text-xs font-bold dark:text-white text-end") $839.58






