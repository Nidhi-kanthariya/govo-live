//- sidebar
-var sidebar = true;

//- feather
-var feather= true;

//- fontAwesome 
-var fontAwesome = true;

//- prism
-var prism=true;

//- customSelect
-var customSelect= true;

//- customizer
-var customizer=true;

//- Breadcrumbs
-var pageTitle="Govo";
-var breadcrumb=['Layouts'];

//- mixin
include components/mixin/mixin 

doctype html
html(lang='en')  
    include components/header-files 
    body(dir="ltr" class="unique-skin") 
        main.page-wrapper
            div.page-body-wrapper(class="xl:w-full 4xl:w-[calc(100%_-_14.375rem)] w-[calc(100%_-_15.8125rem)] ml-auto transition-all duration-300")
                header.fixed.top-0(class="z-[6] xl:w-full 4xl:w-[calc(100%_-_14.375rem)] w-[calc(100%_-_15.8125rem)] ml-auto")
                    div.page-header(class="w-full transition-all bg-white shadow-header dark:bg-sidebar-dark")
                        include components/header  
                        div(class="py-[14px] border-t border-border-light px-body-space dark:border-border-dark") 
                            div.relative.flex.items-center.justify-end(class="lg:justify-start")
                                div.flex.items-center(class="gap-[14px]")
                                    // Breadcrumbs Start 
                                    +breadcrumb(['Layouts'])
                                    // Breadcrumbs End 
                                    div.custom-select.select-style-1(class="lg:hidden dark:text-title")
                                        select(class="dark:text-title")
                                            option(selected value="") Last 7 Days 
                                            option(value="") Last 2 Weeks 
                                            option(value="") Last 1 Month 
                                            option(value="") Last 3 Month     

                // Sidebar Start 
                div.page-sidebar.sidebar-dark.unique-sidebar
                    include components/unique
                // Sidebar End
                // Page Body Start
                div.page-body
                    div.grid.grid-cols-12.gap-card-gap 
                        div.card.col-span-12        
                            div.card-header.pb-2.header-bottom-border
                                h3.text-lg.font-bold Get Started with Tailwind CSS
                            div.card-body    
                                h5(class="flex mb-4 font-semibold")
                                    | How to use layouts ?
                                div(class="grid grid-cols-12 gap-card-gap")
                                    div(class="col-span-4 p-5 border border-border-light xl:col-span-6 sm:col-span-12")
                                        div(class="gap-0 p-0 rounded-none card")
                                            a(href="#")
                                                img(src="../../assets/images/document/full-sidebar.png" alt="img")
                                        div(class="mt-3 mb-3 text-center text-accent")
                                            p(class="font-bold")
                                                | Full Sidebar
                                            p(class="mt-1")
                                                | by default all pages with full sidebar
                                                div(class="p-4 mt-4 bg-gray-light dark:bg-sidebar-dark2 sm:p-2")
                                                    div(class="overflow-auto text-xs custom-scroll text-dark sm:p-2")
                                                        pre(class="text-xs ms-1")
                                                            |&lt;html lang=&quot;en&quot;&gt; 

                                    div(class="col-span-4 p-5 border border-border-light xl:col-span-6 sm:col-span-12")
                                        div(class="gap-0 p-0 rounded-none card")
                                            a(href="#")
                                                img(src="../../assets/images/document/light.png" alt="img")
                                        div(class="mt-3 mb-3 text-center text-accent")
                                            p(class="font-bold")
                                                | Light
                                            p(class="mt-1")
                                                | by default all pages are in light version
                                                div(class="p-4 mt-4 bg-gray-light dark:bg-sidebar-dark2 sm:p-2")
                                                    div(class="overflow-auto text-xs custom-scroll text-dark sm:p-2")
                                                        pre(class="text-xs ms-1")
                                                            |&lt;html lang=&quot;en&quot;&gt;  


                                    div(class="col-span-4 p-5 border border-border-light xl:col-span-6 sm:col-span-12")
                                        div(class="gap-0 p-0 rounded-none card")
                                            a(href="#")
                                                img(src="../../assets/images/document/dark.png" alt="img")
                                        div(class="mt-3 mb-3 text-center text-accent")
                                            p(class="font-bold")
                                                | Dark
                                            div(class="mt-1 text-xs")
                                                | for create dark layout just need to add dark class to html tag 
                                                div(class="p-4 mt-4 bg-gray-light dark:bg-sidebar-dark2 sm:p-2")
                                                    div(class="overflow-auto text-xs custom-scroll text-dark sm:p-2")
                                                        pre(class="text-xs ms-1")
                                                            |&lt;html lang=&quot;en&quot; class=&quot;dark&quot;&gt;  

                                    div(class="col-span-4 p-5 border border-border-light xl:col-span-6 sm:col-span-12")
                                        div(class="gap-0 p-0 rounded-none card")
                                            a(href="#") 
                                                img(src="../../assets/images/document/ltr.png" alt="img")
                                        div(class="mt-3 mb-3 text-center text-accent")
                                            p(class="font-bold")
                                                | LTR
                                            div(class="mt-1 text-xs")
                                                | for create ltr layout just need to apply dir="ltr" to body tag
                                                div(class="p-4 mt-4 bg-gray-light dark:bg-sidebar-dark2 sm:p-2")
                                                    div(class="overflow-auto text-sm custom-scroll text-dark sm:p-2")
                                                        pre(class="text-xs ms-1")
                                                            |&lt;body dir=&quot;ltr&quot;&gt;    

                                    div(class="col-span-4 p-5 border border-border-light xl:col-span-6 sm:col-span-12")
                                        div(class="gap-0 p-0 rounded-none card")
                                            a(href="#")
                                                img(src="../../assets/images/document/rtl.png" alt="img")
                                        div(class="mt-3 mb-3 text-center text-accent")
                                            p(class="font-bold")
                                                | RTL
                                            div(class="mt-1 text-xs")
                                                | for create rtl layout just need to apply dir="rtl" to body tag 
                                                div(class="p-4 mt-4 bg-gray-light dark:bg-sidebar-dark2 sm:p-2")
                                                    div(class="overflow-auto text-sm custom-scroll text-dark sm:p-2")
                                                        pre(class="text-xs ms-1") 
                                                            |&lt;body dir=&quot;rtl&quot;&gt;     

                                    div(class="col-span-4 p-5 border border-border-light xl:col-span-6 sm:col-span-12")
                                        div(class="gap-0 p-0 rounded-none card")
                                            a(href="#")
                                                img(src="../../assets/images/document/icon-sidebar.png" alt="img")
                                        div(class="mt-3 mb-3 text-center text-accent")
                                            p(class="font-bold")
                                                | Icon Sidebar
                                            div(class="mt-1 text-xs")
                                                | add sidebar-close sidebar-icon class along with
                                                div(class="p-4 mt-4 bg-gray-light dark:bg-sidebar-dark2 sm:p-2")
                                                    div(class="overflow-auto text-sm custom-scroll text-dark sm:p-2")
                                                        pre(class="text-xs ms-1")
                                                            |&lt;main class=&quot;page-wrapper sidebar-close sidebar-icon&quot;&gt;  

                                    div(class="col-span-4 p-5 border border-border-light xl:col-span-6 sm:col-span-12")
                                        div(class="gap-0 p-0 rounded-none card")
                                            a(href="#")
                                                img(src="../../assets/images/document/monochrome-mode.png" alt="img")  
                                        div(class="mt-3 mb-3 text-center text-accent")
                                            p(class="font-bold")
                                                | Monochrome Mode
                                            div(class="mt-1 text-xs")
                                                | add class="monochrome-mode" to body tag 
                                                div(class="p-4 mt-4 bg-gray-light dark:bg-sidebar-dark2 sm:p-2")
                                                    div(class="overflow-auto text-sm custom-scroll text-dark sm:p-2")
                                                        pre(class="text-xs ms-1")
                                                            |&lt;body dir=&quot;ltr&quot; class=&quot;monochrome-mode&quot;&gt;     

                // Page Body End 
                div(class=`page-footer 3sm:!px-[10px] fixed bottom-0 xl:w-full 4xl:w-[calc(100%_-_14.375rem)] w-[calc(100%_-_15.8125rem)] ml-auto transition-all duration-300 sm:flex-col flex sm:gap-1 gap-2 items-center justify-between py-[1.1875rem] shadow-footer bg-white px-body-space mt-card-gap`) 
                    p(class="text-xs font-semibold text-center text-content") Copyright 2023 © Govo theme by pixelstrap
                    div.flex.items-center.gap-2 
                        p(class="text-xs font-semibold text-center text-content") Hand crafted & made with
                        i.fa-solid.fa-heart(class="stroke-danger h-[18px] w-[18px] text-danger")
            include components/customizer

    include components/footer-files