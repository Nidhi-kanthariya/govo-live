//- sidebar
-var sidebar = true;

//- feather
-var feather= true;

//- fontawesome
-var fontAwesome=true;

//- custom select
-var customSelect = true;

//- ecommerce
-var ecommerce = true;

//- swiper-slider
-var swiper=true;

//- filepond
-var filepond = true;

//- customizer 
-var customizer = true;

//- Breadcrumbs
-var pageTitle="Add Product";
-var breadcrumb=['Ecommerce','Add Product'];

//- all JSON  
include ../../data/all-data

//- all mixin   
include ../../mixin/mixin

doctype html
html(lang='en')
  include ../../layout/header-files
  body(dir="ltr" class="unique-skin")
    main.page-wrapper
      div.page-body-wrapper(class="xl:w-full 4xl:w-[calc(100%_-_14.375rem)] w-[calc(100%_-_15.8125rem)] ml-auto transition-all duration-300")
        include ../../layout/header/header     
        // Sidebar Start 
        div.page-sidebar.sidebar-dark.unique-sidebar
          include ../../layout/unique 
        // Sidebar End 

        // Page Body Start
        div.page-body 
          div.grid.grid-cols-12.gap-4.add-product.card
            div.col-span-8(class="pr-4 border-r dark:border-r rtl:!border-r-0 rtl:!pr-4 dark:border-border-dark 2lg:col-span-12 2lg:border-b 2lg:pb-4 2lg:border-r-0 border-border-light rtl:border-l rtl:2lg:border-l-0 rtl:border-r-0 rtl:pl-4 rtl:pr-unset")
              div
                h5.text-title.font-semibold.mb-3 Create Product 
                form(class="flex flex-col gap-4 m-0 theme-form")
                  div 
                    label(for="productName") Product Name
                    input(type="text" id="productName" value="Women's Latest Bags" required)
                  div 
                    label(for="description") Product Description 
                    textarea(placeholder="A bag that holds your entire universe!" class="p-[11px] dark:border-border-dark focus:!border-border-light").w-full.border.border-border-light.rounded-5.text-xs.text-content
                  div.grid.grid-cols-12.gap-5
                    div.col-span-6(class="2md:col-span-6 sm:col-span-12")
                      label(for="sku") SKU 
                      input(type="text" id="sku" value="Women's Latest Bags" required)                                            
                    div.col-span-6(class="2md:col-span-6 sm:col-span-12")
                      label(for="brand") Brand
                      select.form-select.block.w-full.px-3.text-xs.font-normal.text-content3.bg-white.bg-clip-padding.bg-no-repeat.border.border-border-light.rounded-5.transition.ease-in-out.m-0(class='min-w-[150px] py-[9px] dark:border-border-dark dark:bg-sidebar-dark2' id="brand" aria-label='Default select example')
                        option(selected='') Dior
                        option(value='1') Gucci
                        option(value='2') louis vuitton
                        option(value='3') Campus 
                        option(value='4') Adidas
                        option(value='5') Puma
                        option(value='6') Nike
                  div.grid.grid-cols-12.gap-5
                    div.col-span-4(class="2md:col-span-6 sm:col-span-12")
                      label(for="gender") Gender
                      select.form-select.block.w-full.px-3.text-xs.font-normal.text-content3.bg-white.bg-clip-padding.bg-no-repeat.border.border-border-light.rounded-5.transition.ease-in-out.m-0(class='min-w-[150px] py-[9px] dark:border-border-dark dark:bg-sidebar-dark2 dark:border-border-dark' id="gender" aria-label='Default select example')
                        option(selected='') Female
                        option(value='1') Male 
                        option(value='2') All
                    div.col-span-4(class="2md:col-span-6 sm:col-span-12")
                      label(for="qty") Quantity
                      input(type="text" id="qty" placeholder="Enter product quantity.." required)                                            
                    div.col-span-4(class="2md:col-span-12")
                      label(for="price") Price 
                      div.flex.items-center
                        span.flex.items-center.justify-center.bg-gray-light.text-title.border.border-border-light.rounded-5.rounded-br-none.rounded-tr-none.font-medium.text-xs(class="!leading-[18px] py-[12px] dark:bg-sidebar-dark2  dark:border-border-dark px-[11px] rtl:rounded-tr-5 rtl:rounded-br-5 rtl:rounded-tl-none rtl:rounded-bl-none") $
                        input(type="text" id="price" placeholder="300" class="p-[11px]").w-full.rounded-5.border.border-border-light.text-xs.text-content(class="!rounded-bl-none !rounded-tl-none rtl:!rounded-tr-none rtl:!rounded-br-none rtl:!rounded-tl-5 rtl:!rounded-bl-5")                                       
                  div.grid.grid-cols-12.gap-5 
                    div.col-span-6(class="2md:col-span-6 sm:col-span-12")
                      label(for="tax") Tax
                      select.form-select.block.w-full.px-3.text-xs.font-normal.text-content3.bg-white.bg-clip-padding.bg-no-repeat.border.border-border-light.rounded-5.transition.ease-in-out.m-0(class='min-w-[150px] py-[9px] dark:border-border-dark dark:bg-sidebar-dark2' id="tax" aria-label='Default select example')
                        option(selected='') Choose Tax
                        option(value='1') 2% 
                        option(value='2') 3%
                    div.col-span-6(class="2md:col-span-6 sm:col-span-12")
                      label(for="discount") Discount
                      div.flex.items-center
                        span.flex.items-center.justify-center.bg-gray-light.text-title.border.border-border-light.rounded-5.rounded-br-none.rounded-tr-none.font-medium.text-xs(class="!leading-[18px] py-[12px]  dark:border-border-dark dark:bg-sidebar-dark2 px-[11px] rtl:rounded-tr-5 rtl:rounded-br-5 rtl:rounded-tl-none rtl:rounded-bl-none") %
                        input(type="text" id="discount" placeholder="10" class="p-[11px]").w-full.rounded-5.border.border-border-light.text-xs.text-content(class="!rounded-bl-none !rounded-tl-none rtl:!rounded-tr-none rtl:!rounded-br-none rtl:!rounded-tl-5 rtl:!rounded-bl-5")
                  div
                    label(for="productImage") Product Images
                    input(type="file" class="cursor-pointer show-preview" id="productImage")
                  div.flex.flex-wrap.gap-2.items-center.justify-end 
                    a(href="javascript:void(0)").btn.btn-success.py-1.text-white.text-xs.flex.gap-2.items-center Save
                    a(href="javascript:void(0)").btn.btn-secondary.py-1.text-white.text-xs.flex.gap-2.items-center Cancel 

            div.col-span-4(class="2lg:col-span-12")
              div(class='dark:border-b dark:border-border-dark').border-b.border-border-light.pb-3
                h5.text-title.font-semibold.mb-3 Publish
                form(class="flex flex-col gap-4 m-0 theme-form")
                  div 
                    label(for="publishStatus") Status
                    select.form-select.block.w-full.px-3.text-xs.font-normal.text-content3.bg-white.bg-clip-padding.bg-no-repeat.border.border-border-light.rounded-5.transition.ease-in-out.m-0(class='min-w-[150px] py-[9px] dark:border-border-dark  dark:bg-sidebar-dark2' id="publishStatus" aria-label='Default select example')
                      option(selected='') Published
                      option(value='1') Draft
                  div 
                    label(for="publishVisible") Visibility
                    select.form-select.block.w-full.px-3.text-xs.font-normal.text-content3.bg-white.bg-clip-padding.bg-no-repeat.border.border-border-light.rounded-5.transition.ease-in-out.m-0(class='min-w-[150px] py-[9px] dark:border-border-dark  dark:bg-sidebar-dark2' id="publishVisible" aria-label='Default select example')
                      option(selected='') Hidden
                      option(value='1') Public
                  div 
                    label(for="category") Product Category
                    select.form-select.block.w-full.px-3.text-xs.font-normal.text-content3.bg-white.bg-clip-padding.bg-no-repeat.border.border-border-light.rounded-5.transition.ease-in-out.m-0(class='min-w-[150px] py-[9px] dark:border-border-dark  dark:bg-sidebar-dark2' id="category" aria-label='Default select example')
                      option(selected='') Applications
                      option(value='1') Grocery
                      option(value='2') Fashion
                      option(value='3') Electronics
                      option(value='4') Furniture
                      option(value='5') Watch
                      option(value='6') Kitchen
                      option(value='7') Beauty & Personal Care
                  div
                    label(for="productTag") Product Tags
                    div.border.border-border-light(class="dark:border-border-dark rounded-5 w-full p-[11px] text-xs font-semibold text-title flex gap-2")
                      span.font-semibold.bg-primary.flex.items-center.gap-2.px-2.py-1.rounded-3xl(class="!w-fit !text-3xs !text-white !leading-none")
                        |   leather
                        i(data-feather="x" class="w-3 h-3 cursor-pointer stroke-white alert-del")
                      input(type="text" id="productTag" class="!border-none !p-0" required)
                  div 
                    label(for="productShortDescription") Product Short Description 
                    textarea(placeholder="Enter Short description for product.." row="3" id="productShortDescription" class="dark:border-border-dark p-[11px] focus:!border-border-light").w-full.border.border-border-light.rounded-5.text-xs.text-content
              div.pt-3
                h5.text-title.font-semibold.mb-3 General Info
                form(class="flex flex-col gap-4 m-0 theme-form")
                  div 
                    label(for="manufactureName") Manufacturer Name
                    input(type="text" id="manufactureName" placeholder="Enter manufacture name.." required)
                  div 
                    label(for="manufacturerBrand") Manufacturer Brand 
                    input(type="text" id="manufacturerBrand" placeholder="Enter manufacture brand.." required)
                  div 
                    label(for="description") Additional 
                    textarea(placeholder="Enter product description.." row="3" id="description" class="p-[11px] focus:!border-border-light dark:border-border-dark").w-full.border.border-border-light.rounded-5.text-xs.text-content


        // Page Body End  
        +footer("sm:flex-col flex sm:gap-1 gap-2 items-center justify-between py-[1.1875rem] shadow-footer bg-white px-body-space mt-card-gap")
      include ../../components/customizer 
  include ../../layout/footer-files





