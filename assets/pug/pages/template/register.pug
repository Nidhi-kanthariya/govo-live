
//- feather
-var feather= true;

//- custom select
-var customSelect= true;

//- fontawesome
-var fontAwesome=true;

doctype html
html(lang='en')
    include ../../layout/header-files
    body(dir="ltr" class="unique-skin")
        main.page-wrapper
            // Page Body Start
            div.page-body(class="h-[100vh]")
                div(class="!flex items-center justify-center h-full p-[15px] common-animate-main").ratio_asos
                    img(class="bg-img" src="../../assets/images/dotsbg.jpg")
                    div(class=" grid grid-cols-12 gap-0 mx-auto w-full max-w-[70%] xl:max-w-[50%] md:max-w-[70%] sm:max-w-[80%] 2sm:max-w-[100%] xl:flex xl:justify-center lg:grid items-center")
                        div(class="relative col-span-5 bg-white 2xl:col-span-6 z-1 xl:col-span-12 rounded-xl max-w-[470px] min-w-[300px] max-h-max")
                            form.theme-form.flex.flex-col.gap-3(class="!m-0 p-8 2sm:p-4" action="index.html")
                                h3 Create an account
                                p Enter your detail for registration
                                div
                                    input(type="text" placeholder="Enter your name.." required)
                                div
                                    input(type="email" placeholder="Enter your id.." required)
                                div
                                    input(type="password" placeholder="Password.." required)
                                div.flex.items-center.gap-2
                                    label.checkbox(class="w-[1rem] h-[1rem]")   
                                        input(type='checkbox' class="peer") 
                                        div.checkbox-indicator(class="peer-checked:!bg-primary !border-primary")  
                                            i(data-feather="check")
                                    span Accept terms & condition
                                button.btn.btn-primary.text-white(class="hover:drop-shadow-lg") Sign Up
                                div.text-center
                                    span Already have an account?   
                                        a(href="login.html") Sign in
                                div
                                    h4 Or Sign in with 
                                div.social(class="sm:flex-col")
                                    a(href="https://www.linkedin.com/login" class="flex items-center justify-center gap-1 btn !text-linkedin")
                                        i.fa-brands.fa-linkedin-in
                                        |   Linkedin
                                    a(href="https://twitter.com/i/flow/login" class="flex items-center justify-center gap-1 btn !text-twitter")
                                        i.fa-brands.fa-twitter
                                        |   Twitter
                                    a(href="https://www.instagram.com/accounts/login/" class="flex items-center justify-center gap-1 btn instagram !text-instagram")
                                        svg(width='0' height='0')
                                            radialgradient#rg(r='150%' cx='30%' cy='107%')
                                                stop(stop-color='#fdf497' offset='0')
                                                stop(stop-color='#fdf497' offset='0.05')
                                                stop(stop-color='#fd5949' offset='0.45')
                                                stop(stop-color='#d6249f' offset='0.6')
                                                stop(stop-color='#285AEB' offset='0.9')
                                        i.fa-brands.fa-instagram
                                        span   Instagram
                        div(class="col-span-7 rounded-lg 4xl:col-span-6 z-1 xl:col-span-12 xl:hidden")
                            div(class="relative flex items-center justify-center object-contain")
                                img(src="../../assets/images/svg/register1.svg" alt="register vector" class="w-[100%]")
                                img(src="../../assets/images/svg/register.svg" alt="register vector" class="common-animate animate-ping top-[6%] 4xl:top-[-3%] 2xl:top-[-6%] 4xl:right-[37%] absolute right-[41%] animate__animated animate__infinite animate__shakeY animate__slower")
            // Page Body End

        include ../../components/customizer   

    include ../../layout/footer-files